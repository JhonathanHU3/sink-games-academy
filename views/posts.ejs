<!-- post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 20px;
    }

    h2 {
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    #post-form {
      max-width: 600px;
      margin-top: 20px;
    }

    #post-form input,
    #post-form textarea,
    #post-form button {
      display: block;
      margin-bottom: 10px;
    }

    #post-form label {
      margin-bottom: 5px;
      display: block;
    }

    #post-form textarea {
      height: 100px;
    }

    #post-form button {
      background-color: #4caf50;
      color: white;
      border: none;
      padding: 10px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      cursor: pointer;
      border-radius: 5px;
    }

    #post-form button:hover {
      background-color: #45a049;
    }

    a.forum-link {
      text-decoration: none;
      color: #007bff;
      font-weight: bold;
    }

    a.forum-link:hover {
      text-decoration: underline;
    }

    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .pagination a {
      padding: 8px;
      margin: 0 4px;
      text-decoration: none;
      color: #007bff;
      border: 1px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
    }

    .pagination a.active {
      background-color: #007bff;
      color: white;
    }
  </style>
</head>
<body>

  <h2>Filtrar por Class ID</h2>

  <a class="forum-link" href="/posts">Todas as Postagens</a>
  <a class="forum-link" href="/posts/1">League of Legends</a>
  <a class="forum-link" href="/posts/2">CS:GO</a>
  <a class="forum-link" href="/posts/3">DOTA 2</a>
  <a class="forum-link" href="/posts/4">Fortnite</a>
  <a class="forum-link" href="/posts/5">Valorant</a>

  <h2>Lista de Posts</h2>

  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Conteúdo</th>
        <th>Usuario</th>
        <th></th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(post => { %>
        <tr>
          <td><a class="forum-link" href="/posts/open/<%= post.id %>"><%= post.title %></a></td>
          <td><%= post.content %></td>
          <td><%= post.username %></td>
          <td><img src="<%= post.profileimagedir %>" alt='' width="50" height="50"></td>
          <td><%= post.new_date %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>


  <div class="pagination">
    <% for(let i = 1; i <= totalPages; i++) { %>
      <a href="<%= classId ? `/posts/${classId}?page=${i}` : `/posts?page=${i}` %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
    <% } %>
  </div>


</body>
</html>
