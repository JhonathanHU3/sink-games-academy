<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style/geral.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">

  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <title>Home</title>
</head>

<body>
  <main class="main">
    <div class="container">
      <div class="row">
        <section class="left">
          <h2>Posts Recentes</h2>
          <% posts.forEach(post=> { %>
            <div class="inner-left">
              <div class="box">
                <div class="img">
                  <img src="<%= post.profileimagedir %>" alt="" />
                </div>
                <div class="details">
                  <p>
                    <%= post.username %>     
                    <%= post.xp %> XP
                  </p>
                  <h3>
                    <%= post.title %>
                  </h3>
                  <div class="sub-details">
                    <span>
                      <%= post.new_date %>
                    </span>
                    <div class="comment">
                      <i class="fa-solid fa-comment"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
        </section>
<section class="right">
    <div class="box first">
        <h3>Tópico <%= topGames[0].name %></h3>
        <p>
            <%= topGames[0].description %>
        </p> <br>
    </div>
    <div class="box top-forums">
        <h3>Tópicos mais vistos</h3>
        <a href="#"> <i class="fa-solid fa-arrow-right"></i></a>
        <div class="inner-box">
            <h4><a class="forum-link" href="/posts">Todas as Postagens</a></h4>
            <% topGames.slice(1).forEach(course => { %>
              <h4><a class="forum-link" href="/posts/<%= course.id %>"><%= course.name %></a></h4>
          <% }); %>
        </div>
    </div>
</section>
      </div>
    </div>

  </main>



  <footer>
    <p>&copy; 2023 Sink Academy Games. Todos os direitos reservados.</p>
    <p>Contato: contato@sinkacademygames.com</p>
    <p>Endereço: Rua dos Games, 123 - Cidade Gamer</p>
    <p>Fundadores: Grazielle Sorrentino - Henrique Pereira -Ian Maciel- Jhonathan Silva</p>
  </footer>
  <script>
    /*nav*/
    const nav = document.querySelector('nav');

    window.addEventListener('scroll', function () {
      if (window.scrollY >= window.innerHeight) {
        nav.style.backgroundColor = 'black';
      } else {
        nav.style.backgroundColor = 'transparent';
      }
    });



    var menuToggle = document.getElementById('mobile-menu');
    var menu = document.querySelector('.menu');

    menuToggle.addEventListener('click', function () {
      menu.classList.toggle('show-menu');
    });


    document.addEventListener('click', function (event) {
      var isClickInsideMenu = menu.contains(event.target);
      var isClickOnMenuToggle = menuToggle.contains(event.target);

      if (!isClickInsideMenu && !isClickOnMenuToggle) {
        menu.classList.remove('show-menu');
      }
    });



    document.addEventListener('DOMContentLoaded', function () {
      var swiper = new Swiper('.swiper-container', {
        slidesPerView: 1,
        spaceBetween: 1,
        loop: true,
        autoplay: {
          delay: 2000,
          disableOnInteraction: false,
        },
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
      });
    });

    document.addEventListener('DOMContentLoaded', function () {
      var recomendacoesSwiper = new Swiper('.recomendacoes-swiper-container', {
        slidesPerView: 1,
        spaceBetween: 10,
        navigation: {
          nextEl: '.recomendacoes-swiper-button-next',
          prevEl: '.recomendacoes-swiper-button-prev',
        },
        scrollbar: {
          el: '.recomendacoes-swiper-scrollbar',
        },
        breakpoints: {
          768: {
            slidesPerView: 2,
            spaceBetween: 20,
          },
          992: {
            slidesPerView: 3,
            spaceBetween: 30,
          },
        },
      });
    });

    /*slick*/

    $(document).ready(function () {
      $('.owl-carousel').owlCarousel({
        items: 3, // Número de itens visíveis
        loop: true,
        margin: 100,
        center: true, // Mantém o item do meio em evidência
        nav: true,
        responsive: {
          0: {
            items: 2
          },
          600: {
            items: 3
          },
          1000: {
            items: 4
          }
        }
      });
    });

  </script>
</body>

</html>