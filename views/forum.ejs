<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style/geral.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">

  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <title>Home</title>
  <style>
    /* Adicione seus estilos CSS personalizados aqui */
    .popup {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .popup-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      padding: 20px;
      text-align: center;
    }

    .close {
      position: absolute;
      top: 10px;
      right: 10px;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <main class="main">
    <div class="container">
      <div class="row">
        <section class="left">
          <h2>Posts Recentes</h2>
          <% posts.forEach(post=> { %>
            <div class="inner-left">
              <div class="box">
                <div class="img">
                  <img src="<%= post.profileimagedir %>" alt="" />
                </div>
                <div class="details">
                  <p>
                    <%= post.username %>     
                    <%= post.xp %> XP
                  </p>
                  <h3>
                    <%= post.title %>
                  </h3>
                  <div class="sub-details">
                    <span>
                      <%= post.new_date %>
                    </span>
                    <div class="comment">
                      <i class="fa-solid fa-comment"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
            <!-- Adicione o botão para abrir o popup -->
            <button onclick="openPopup()">Criar Post</button>
        </section>
        <section class="right">
          <div class="box first">
            <% if (currentGame && currentGame.name && currentGame.description) { %>
              <h3>Tópico <%= currentGame.name %></h3>
              <p><%= currentGame.description %></p>
            <% } else { %>
              <p>Nenhum tópico disponível</p>
            <% } %>
          </div>
          <div class="box top-forums">
              <h3>Tópicos mais vistos</h3>
              <a href="#"> <i class="fa-solid fa-arrow-right"></i></a>
              <div class="inner-box">
                  <h4><a class="forum-link" href="/posts">Todas as Postagens</a></h4>
                  <% topGames.slice(0).forEach(course => { %>
                      <h4><a class="forum-link" href="/posts/<%= course.id %>"><%= course.name %></a></h4>
                  <% }); %>
              </div>
          </div>
        </section>
      </div>
    </div>
  </main>

  <footer>
    <p>&copy; 2023 Sink Academy Games. Todos os direitos reservados.</p>
    <p>Contato: contato@sinkacademygames.com</p>
    <p>Endereço: Rua dos Games, 123 - Cidade Gamer</p>
    <p>Fundadores: Grazielle Sorrentino - Henrique Pereira - Ian Maciel - Jhonathan Silva</p>
  </footer>

  <!-- Popup para criar post -->
  <div class="popup" id="createPostPopup">
    <div class="popup-content">
      <span class="close" onclick="closePopup()">&times;</span>
      <h2>Criar Novo Post</h2>
      <form id="createPostForm">
        <label for="postTitle">Título:</label>
        <input type="text" id="postTitle" name="postTitle" required>

        <label for="postContent">Conteúdo:</label>
        <textarea id="postContent" name="postContent" required></textarea>

        <label for="postClassId">Class ID:</label>
        <input type="text" id="postClassId" name="postClassId" required>

        <!-- Adicione um campo oculto para armazenar o ID do usuário -->
        <input type="hidden" id="userId" name="userId" value="1">

        <button type="submit">Criar Post</button>
      </form>
    </div>
  </div>

  <script>
    /* Adicione seus scripts JavaScript aqui */

    // Função para abrir o popup
    function openPopup() {
      document.getElementById('createPostPopup').style.display = 'block';
    }

    // Função para fechar o popup
    function closePopup() {
      document.getElementById('createPostPopup').style.display = 'none';
    }

    // Envie o formulário para o servidor (você precisará adicionar a lógica do servidor)
    document.getElementById('createPostForm').addEventListener('submit', function (event) {
      event.preventDefault();

      // Aqui você pode enviar os dados do formulário para o servidor usando AJAX ou outra técnica
      // Exemplo com jQuery AJAX:
      $.ajax({
        url: '/create-post-endpoint', // Substitua pelo URL do seu endpoint de criação de post
        type: 'POST',
        data: $('#createPostForm').serialize(),
        success: function (response) {
          // Lógica para lidar com a resposta do servidor
          console.log(response);
          closePopup(); // Feche o popup após o post ser criado
        },
        error: function (error) {
          console.error(error);
        }
      });
    });
  </script>
</body>

</html>
